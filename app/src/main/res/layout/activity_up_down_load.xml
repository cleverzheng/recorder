<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音" />

    <Button
        android:id="@+id/btnUpLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传" />

    <!--<ProgressBar-->
    <!--style="@android:style/Widget.ProgressBar.Horizontal"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <com.example.forcezheng.android_qiniu_up_down_load.view.RoundProgressBar
        android:id="@+id/roundPb"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android_custom:radius="306"
        android_custom:roundColor="@color/progress_bg"
        android_custom:roundFirstProgressColor="@color/progress_first_color" />


    <Chronometer
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format="%s"
        android:textColor="#00b4bb"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:background="#00b4bb"
        android:src="@drawable/ic_left_chat_bg" />


</LinearLayout>